    .page_404{  background:#fff;
    }

    .page_404  img{ width:100%;}

    .four_zero_four_bg{

        margin-left: 15%;
        background-image: url('/404-page.gif');
        height: 600px;
        background-position: center;
        background-repeat: no-repeat;

    }

    .four_zero_four_bg h1{
        font-size:80px;
    }
 
    .four_zero_four_bg h3{
        font-size:80px;
    }
			 
    .link_404{			 
        color: #fff!important;
        padding: 10px 20px;
