@inject NavigationManager Navigation
<CascadingAuthenticationState>
    
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
			
                <NotAuthorized>
					
                    @{
                        Navigation.NavigateTo("/login", true);
                    }

                </NotAuthorized>
			

            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <section class="page_404">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12 ">
                                <div class="col-sm-10 col-sm-offset-1  text-center">

                                    <div class="four_zero_four_bg">
                                    </div>

                                    <br />
                                    <br />

                                    <div class="contant_box_404">

                                        <h3 class="h2">
                                            Oops! Look like you're lost
                                        </h3>

                                        <p>the page you are looking for is cannot be found or is not available!</p>

                                        <br />

                                        <MudButton Variant="Variant.Filled" OnClick="() => GoHome()" Style="background-color: #ff4500; color: white; margin-left: 10%; margin-right: 10%">Go back home</MudButton>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </LayoutView>
        </NotFound>
    </Router>

</CascadingAuthenticationState>


@code
{
    public void GoHome()
    {
        Navigation.NavigateTo("/", true);
    }
}


